<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
        android:id="@+id/amao_include"
        layout="@layout/layout_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amao_include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height170"
                android:background="@mipmap/fp_iv_bg">

                <ImageView
                    android:id="@+id/amao_riv_head"
                    android:layout_width="@dimen/height120"
                    android:layout_height="@dimen/height120"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:paddingLeft="24dp">

                <ImageView
                    android:id="@+id/amao_iv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/fp_iv_man" />

                <TextView
                    android:id="@+id/amao_tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="我若成风"
                    android:textSize="@dimen/height18"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:paddingLeft="24dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/fp_iv_location" />

                <TextView
                    android:id="@+id/amao_tv_location_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="杭州"
                    android:textSize="@dimen/height18"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:id="@+id/amao_rv_been_gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:background="@drawable/rv_bg"
                android:paddingLeft="@dimen/height24"
                android:paddingRight="@dimen/height20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/fp_iv_been_gone" />

                <TextView
                    android:id="@+id/amao_tv_bean_gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="去过"
                    android:textSize="@dimen/height18"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/fp_iv_next" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/amao_lv_image_of_been_gone"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height100"
                    android:paddingBottom="@dimen/height8"
                    android:paddingLeft="@dimen/height8"
                    android:paddingRight="@dimen/height8"
                    android:paddingTop="@dimen/height8">

                    <ImageView
                        android:id="@+id/amao_iv_been_image1"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/amao_iv_been_image2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_launcher" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:id="@+id/amao_rv_want_go"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:background="@drawable/rv_bg"
                android:paddingLeft="@dimen/height24"
                android:paddingRight="@dimen/height20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/fp_iv_want_go" />

                <TextView
                    android:id="@+id/fp_tv_want_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="想去"
                    android:textSize="@dimen/height18"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/fp_iv_next" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <Button
                android:id="@+id/amao_btn_send"
                android:layout_width="match_parent"
                android:textSize="24sp"
                android:text="@string/send_msg"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:background="@drawable/al_btn_bg"
                android:layout_marginTop="@dimen/height26"
                android:layout_height="@dimen/height50" />

            <LinearLayout
                android:id="@+id/amao_lv_image_of_want_go"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height100"
                    android:paddingBottom="@dimen/height8"
                    android:paddingLeft="@dimen/height8"
                    android:paddingRight="@dimen/height8"
                    android:paddingTop="@dimen/height8">

                    <ImageView
                        android:id="@+id/amao_iv_want_image1"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/amao_iv_want_image2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_launcher" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>