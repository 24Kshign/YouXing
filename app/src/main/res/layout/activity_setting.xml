<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height8"
        android:background="@color/btnLoginGreenNormal" />

    <RelativeLayout
        android:id="@+id/as_rv_info_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:background="@drawable/rv_bg"
        android:paddingLeft="@dimen/height30"
        android:paddingRight="@dimen/height30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="资料设置"
            android:textColor="@android:color/black"
            android:textSize="@dimen/height18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ac_iv_next" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/as_rv_messege_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:background="@drawable/rv_bg"
        android:paddingLeft="@dimen/height30"
        android:paddingRight="@dimen/height30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="消息提示"
            android:textColor="@android:color/black"
            android:textSize="@dimen/height18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ac_iv_next" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/as_rv_clear_chat_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:background="@drawable/rv_bg"
        android:paddingLeft="@dimen/height30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除聊天记录"
            android:textColor="@android:color/black"
            android:textSize="@dimen/height18" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/as_rv_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:background="@drawable/rv_bg"
        android:paddingLeft="@dimen/height30"
        android:paddingRight="@dimen/height30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            android:textColor="@android:color/black"
            android:textSize="@dimen/height18" />

        <TextView
            android:id="@+id/as_tv_num_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="30M"
            android:visibility="gone"
            android:textColor="@color/publish_word"
            android:textSize="@dimen/height16" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/as_rv_set_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:background="@drawable/rv_bg"
        android:paddingLeft="@dimen/height30"
        android:paddingRight="@dimen/height30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置/修改密码"
            android:textColor="@android:color/black"
            android:textSize="@dimen/height18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ac_iv_next" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height20"
        android:paddingLeft="@dimen/height20"
        android:paddingRight="@dimen/height20">

        <Button
            android:id="@+id/as_btn_exit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/btn_exit"
            android:text="退出登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/height18"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>