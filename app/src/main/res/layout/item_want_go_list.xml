<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/height8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iwgl_riv_image_head"
                android:layout_width="@dimen/height36"
                android:layout_height="@dimen/height36"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/iwgl_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height12"
                android:layout_toRightOf="@+id/iwgl_riv_image_head"
                android:textSize="@dimen/height16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/iwgl_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCirclr"
        android:padding="@dimen/height8">

        <ImageView
            android:id="@+id/iwgl_iv_image"
            android:layout_width="@dimen/height140"
            android:layout_height="@dimen/height80"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height18"
            android:layout_toRightOf="@+id/iwgl_iv_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iwgl_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/height16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/iwgl_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height6"
                android:ellipsize="end"
                android:maxLines="3" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black" />

</LinearLayout>