<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/lnl_rv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/lnl_iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_not_login" />

        <TextView
            android:id="@+id/lnl_tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height30"
            android:layout_toRightOf="@+id/lnl_iv_image"
            android:text="大人，这里什么都没有"
            android:textColor="@color/btnLoginGreenNormal"
            android:textSize="@dimen/height20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lnl_tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnl_tv_top"
            android:layout_marginLeft="@dimen/height20"
            android:layout_toRightOf="@+id/lnl_iv_image"
            android:text="不然咱去登陆试试？"
            android:textColor="@color/btnLoginGreenNormal"
            android:textSize="@dimen/height20"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnl_rv_top"
        android:layout_marginTop="@dimen/height10"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/height30"
        android:paddingRight="@dimen/height30">

        <Button
            android:id="@+id/lnl_btn_register"
            android:layout_width="0dp"
            android:layout_height="@dimen/height44"
            android:layout_weight="1"
            android:background="@drawable/al_btn_bg"
            android:text="@string/register"
            android:textColor="@android:color/white"
            android:textSize="@dimen/height18"
            android:textStyle="bold" />

        <Button
            android:id="@+id/lnl_btn_login"
            android:layout_width="0dp"
            android:layout_height="@dimen/height44"
            android:layout_marginLeft="@dimen/height30"
            android:layout_weight="1"
            android:background="@drawable/al_btn_bg"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/height18"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>