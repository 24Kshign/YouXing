<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ifl_iv_image"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <View
        android:layout_width="match_parent"
        android:background="@color/btnLoginGreenNormal"
        android:layout_height="@dimen/height8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/height4"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ifl_tv_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/height16"
            android:textStyle="bold"
            android:lines="4"
            android:ellipsize="end"
            android:textColor="@color/colorNickName"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>