<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height28"
                android:background="@color/colorMessegeSettingLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:paddingLeft="@dimen/height22"
                android:paddingRight="@dimen/height22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="声音"
                    android:textSize="@dimen/height18"
                    android:textStyle="bold" />

                <com.share.jack.widget.UISwitchButton xmlns:switch="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/amt_usb_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    switch:bmHeight="1000dp"
                    switch:bmWidth="50dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/black" />

            <LinearLayout
                android:id="@+id/amt_lv_all_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height14"
                    android:background="@color/colorMessegeSettingLine" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height50"
                    android:paddingLeft="@dimen/height22"
                    android:paddingRight="@dimen/height22">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="评论"
                        android:textSize="@dimen/height18"
                        android:textStyle="bold" />

                    <com.share.jack.widget.UISwitchButton xmlns:switch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/amt_usb_voice_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        switch:bmHeight="1000dp"
                        switch:bmWidth="50dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height50"
                    android:paddingLeft="@dimen/height22"
                    android:paddingRight="@dimen/height22">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/ait"
                        android:textSize="@dimen/height18"
                        android:textStyle="bold" />

                    <com.share.jack.widget.UISwitchButton xmlns:switch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/amt_usb_voice_ait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        switch:bmHeight="1000dp"
                        switch:bmWidth="50dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height50"
                    android:paddingLeft="@dimen/height22"
                    android:paddingRight="@dimen/height22">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="聊天消息"
                        android:textSize="@dimen/height18"
                        android:textStyle="bold" />

                    <com.share.jack.widget.UISwitchButton xmlns:switch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/amt_usb_voice_chat_messege"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        switch:bmHeight="1000dp"
                        switch:bmWidth="50dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height28"
                android:background="@color/colorMessegeSettingLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:paddingLeft="@dimen/height22"
                android:paddingRight="@dimen/height22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="震动"
                    android:textSize="@dimen/height18"
                    android:textStyle="bold" />

                <com.share.jack.widget.UISwitchButton xmlns:switch="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/amt_usb_shake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    switch:bmHeight="1000dp"
                    switch:bmWidth="50dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:id="@+id/amt_lv_all_shake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height14"
                    android:background="@color/colorMessegeSettingLine" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height50"
                    android:paddingLeft="@dimen/height22"
                    android:paddingRight="@dimen/height22">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="评论"
                        android:textSize="@dimen/height18"
                        android:textStyle="bold" />

                    <com.share.jack.widget.UISwitchButton xmlns:switch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/amt_usb_shake_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        switch:bmHeight="1000dp"
                        switch:bmWidth="50dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height50"
                    android:paddingLeft="@dimen/height22"
                    android:paddingRight="@dimen/height22">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/ait"
                        android:textSize="@dimen/height18"
                        android:textStyle="bold" />

                    <com.share.jack.widget.UISwitchButton xmlns:switch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/amt_usb_shake_ait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        switch:bmHeight="1000dp"
                        switch:bmWidth="50dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height50"
                    android:paddingLeft="@dimen/height22"
                    android:paddingRight="@dimen/height22">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="聊天消息"
                        android:textSize="@dimen/height18"
                        android:textStyle="bold" />

                    <com.share.jack.widget.UISwitchButton xmlns:switch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/amt_usb_shake_chat_messege"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        switch:bmHeight="1000dp"
                        switch:bmWidth="50dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>