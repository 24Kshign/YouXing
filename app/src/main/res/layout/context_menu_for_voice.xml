<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/height20"
    android:layout_marginRight="@dimen/height20"
    android:gravity="center_horizontal"
    android:orientation="vertical" >


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/context_menu_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="delete"
        android:padding="@dimen/height10"
        android:text="@string/delete_voice"
        android:textColor="@android:color/black"
        android:textSize="@dimen/height20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray" />


</LinearLayout>