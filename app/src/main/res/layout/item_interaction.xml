<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/height10"
    android:background="@drawable/rv_bg">

    <ImageView
        android:id="@+id/ii_riv_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/ii_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/height14"
        android:layout_toRightOf="@+id/ii_riv_head"
        android:ellipsize="end"
        android:paddingRight="@dimen/height14"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/height18" />

</RelativeLayout>