<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/idm_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height6"
        android:layout_marginTop="@dimen/height6"
        android:background="@drawable/layout_meet_pop_list_bg"
        android:padding="@dimen/height14"
        android:textColor="@android:color/black"
        android:textSize="@dimen/height16" />

    <TextView
        android:id="@+id/idm_tv_num"
        android:layout_width="@dimen/height24"
        android:layout_height="@dimen/height24"
        android:background="@drawable/unread_count_bg"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/height16"
        android:textStyle="bold" />

</RelativeLayout>