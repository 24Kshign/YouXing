<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <corners
                android:bottomRightRadius="@dimen/height0"
                android:radius="@dimen/height12"
                android:topRightRadius="@dimen/height0" />
            <solid android:color="@color/top_frame" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:top="1dp">
        <shape>
            <corners
                android:bottomRightRadius="@dimen/height0"
                android:radius="@dimen/height12"
                android:topRightRadius="@dimen/height0" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>